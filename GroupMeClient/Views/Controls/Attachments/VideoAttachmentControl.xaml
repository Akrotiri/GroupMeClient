<UserControl x:Class="GroupMeClient.Views.Controls.Attachments.VideoAttachmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             Background="White">

    <Grid ForceCursor="true" Cursor="Hand">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseDown" >
                <i:InvokeCommandAction Command="{Binding Clicked}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        
        <Image Grid.Row="0"
               Grid.RowSpan="2"
               MaxWidth="600"
               MaxHeight="300"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Source="{Binding RenderedImage}" />

        <iconPacks:PackIconMaterial Kind="PlayCircle" 
                                    Width="70" Height="70"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Opacity="0.8"/>
    </Grid>
</UserControl>